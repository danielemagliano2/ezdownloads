---
import Layout from '../layouts/Layout.astro';
---

<Layout title="EZDownloads.xyz">
  <!-- Full-screen looping video lives *behind* content -->
  <video
    src="/hero.mp4"
    autoplay
    muted
    loop
    playsinline
    class="fixed inset-0 -z-10 w-screen h-screen object-cover"
  ></video>

  <!-- (Optional) overlay content could go here -->
  <section class="flex items-center justify-center h-[calc(100vh-5rem)]">
    <!-- empty: lets video speak for itself -->
  </section>
</Layout>
